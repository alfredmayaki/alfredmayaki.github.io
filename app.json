{
  "name": "alfredmayaki.me",
  "description": "Personal website for Alfred Anate Bodurin Mayaki, featuring multilingual support and analytics.",
  "version": "1.0.0",
  "author": "Alfred Anate Bodurin Mayaki",
  "license": "GNU",
  "homepage": "https://www.alfredmayaki.me/",
  "languages": [
    "en", "fr", "de", "es", "he", "it", "ja", "ar", "nl", "ru", "pt", "tr"
  ],
  "main": "index.html",
  "scripts": {
    "start": "npx serve -s .",
    "lint": "echo 'No linter configured.'"
  },
  "keywords": [
    "personal website",
    "multilingual",
    "economics",
    "portfolio",
    "alfred mayaki"
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "redirects": [
    {
      "source": ":path*",
      "has": [
        {
          "type": "cookie",
          "name": "language",
          "value": "fr"
        }
      ],
      "destination": "/fr/:path*",
      "statusCode": 301
    }
  ]
}